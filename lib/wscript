# vim: set syntax=python:

def build(bld):
    t = bld.stlib(
        source = [
            'hstcal_memory.c',
            'trlbuf.c',
            'hstcalversion.c',
            'str_util.c'
            ],
        target = 'hstcallib',
        includes = ['./',
                    '../include/',
                    '../cfitsio'
                    ],
        use = ['CFITSIO', 'OPENMP'],
        install_path = bld.env.INSTALL_LIB and '${PREFIX}/lib'
        )
